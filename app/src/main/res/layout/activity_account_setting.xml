<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettingActivity">

<!--    <androidx.appcompat.widget.Toolbar-->
<!--        android:id="@+id/toolbar_account_setting"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="#36CFE3" />-->

    <ImageView
        android:id="@+id/setting_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/profile_image" />

    <EditText
        android:id="@+id/setting_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_profile_image"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_input"
        android:hint="Email"
        android:inputType="textImeMultiLine"
        android:padding="6dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/setting_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_profile_email"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_input"
        android:hint="Tên người dùng"
        android:inputType="textImeMultiLine"
        android:padding="6dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/setting_profile_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_profile_name"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_input"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="6dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/setting_profile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_profile_password"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_input"
        android:hint="Số điện thoại"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/setting_profile_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_profile_phone"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_input"
        android:hint="Địa chỉ"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/update_setting_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_profile_address"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:inputType="textImeMultiLine"
        android:padding="6dp"
        android:text="Update"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cancel_setting_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_setting_button"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:inputType="textImeMultiLine"
        android:padding="6dp"
        android:text="Cancel"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>